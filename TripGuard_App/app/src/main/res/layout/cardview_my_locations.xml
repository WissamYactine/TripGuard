<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:app="http://schemas.android.com/tools"
	android:id="@+id/storedLocationsCardView"
	android:layout_width="300dp"
	android:layout_height="70dp"
	android:layout_marginBottom="10dp"
	card_view:cardBackgroundColor="@android:color/transparent"
	app:cardElevation="0dp">

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/round_box2"
		android:backgroundTint="@color/grey"
		android:backgroundTintMode="multiply"/>

	<TextView
		android:id="@+id/locationTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:layout_marginTop="10dp"
		android:text="@string/lorem"
		android:textColor="@android:color/black"
		android:textSize="20sp" />

	<TextView
		android:id="@+id/notifType"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:layout_marginTop="30dp"
		android:text="@string/lorem"
		android:textColor="@color/darkgrey"
		android:textSize="18sp" />

	<Button
		android:id="@+id/removeLocationButton"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginStart="250dp"
		android:layout_marginTop="15dp"
		android:background="@drawable/ic_x"
		android:backgroundTint="@color/black"/>

	<Button
		android:id="@+id/locationNotif"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:background="@drawable/ic_notif"
		android:layout_marginStart="200dp"
		android:layout_marginTop="15dp"/>

</androidx.cardview.widget.CardView>